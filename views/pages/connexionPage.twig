{% extends "../base.twig" %}
{% block stylesheet %}
	<link rel="stylesheet" href="/css/connexionPage.css">

{% endblock %}
{% block title %}
	<title>Connexion Page</title>
{% endblock %}
{% block main %}
		<main>
		<section id="section-register">
			<article id="article-register">
				<img src="images/icon-Conexion.png" alt="">
				<p>Connectez vous !!!!</p>
			</article>
			<article id="bouttons-register">
				<div id="bouttonFace">
					<img src="images/icon-face.png" alt="facebook">
					<p>Continuer avec Facebook</p>
				</div>
				<div id="bouttonGoogle">
					<img src="images/icon-google.png" alt="google">
					<p>Continuer avec google</p>
				</div>
				<div id="bouttonMail">
					<img src="images/icon-mail.png" alt="mail">
					<p>Se connecter par mail</p>
				</div>
			</article>
            <p>Vous n'avez pas de compte? Inscrivez vous</p>
		</section>
	</main>
{% endblock %}