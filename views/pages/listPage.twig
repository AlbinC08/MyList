{% extends "../base.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="/css/listPage.css">
{% endblock %}

{% block title %}
	<title>List Page</title>
{% endblock %}

{% block nav %}
	{% include "../layout/nav.twig" %}
	<form action="/addProduct/{{list.id}}" method="get">
		<button id="addButton" type="submit">
			<img src="../images/iconAddToShoppingCart.png" alt="">
		</button>
	</form>
{% endblock %}

{% block main %}


	<h2 id="listName">{{ list.ListName }}</h2>

	<div id="aaa">
		
			<div id="center-product">
				{% for product in products %}
					<div id="styleProduct">
						{{product.productName}}
					</div>
				{% endfor %}
			</div>
		

	</div>

{% endblock %}
