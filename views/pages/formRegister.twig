{% extends "../base.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="/css/formRegister.css">
{% endblock %}

{% block title %}
	<title>Start Page</title>
{% endblock %}
{% block main %}
	<main>
		<div id="form-contact">
			<div id="contact" class="container p-lg-5 p-3 text-center">

				<h2>Formulaire d'inscription</h2>

				<form action="/formRegister/{{user.id}}" method="post">

					<input type="text" id="name" name="name" placeholder="Votre Nom">

					<input type="text" id="firstname" name="firstname" placeholder="Votre Prenom">

					<input type="mail" id="mail" name="mail" placeholder="Votre email">

					<input type="password" id="password" name="password" placeholder="Mot de passe">

					<input type="submit" value="Envoyer">

				</form>
			</div>
		</div>
	</main>
{% endblock %}
